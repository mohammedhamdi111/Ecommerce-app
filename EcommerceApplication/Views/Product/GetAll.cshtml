@model List<EcommerceApplication.Core.Models.Product>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Categories</li>

        </ol>
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Category Details
                <a asp-action="Add" asp-controller="Product" class="btn btn-info pull-right fa fa-plus">Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>CreatedDate</th>
                                <th>CreatedModified</th>
                                <th>IsActive</th>
                                <th>IsDeleted</th>
                                <th>CategoryName</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>CreatedDate</th>
                                <th>ModifiedDate</th>
                                <th>IsActive</th>
                                <th>IsDeleted</th>
                                <th>CategoryName</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.Image</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.IsActive</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Product"   class="btn btn-danger"   asp-route-id="@item.Id"> 
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
</div>
